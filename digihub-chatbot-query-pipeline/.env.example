# DigiHub Chatbot Query Pipeline - Environment Configuration
# Copy this to .env and fill in your values

# Option 1: Remote Config Server (fetches all config from server)
CONFIG_URL=https://your-config-server/digihub-chatbot-query-pipeline/dev

# ----- OR -----

# Option 2: Direct Configuration (if not using config server)
# Note: You'll need to modify config.py to read these directly

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
OPENAI_API_VERSION=2024-02-15-preview
OPENAI_DEPLOYMENT_NAME=gpt-4o

# Azure Key Vault (for fetching secrets)
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# CosmosDB
COSMOSDB_ENDPOINT=https://your-cosmosdb.documents.azure.com:443/
COSMOSDB_KEY=your-cosmosdb-key
DIGIHUB_DBNAME=digihub-chatbot
KNOWLEDGE_BASE_CONTAINER=knowledge-base
COSMOSDB_SHAREPOINT_DATA_CONTAINER_NAME=sharepoint-data

# Azure Storage (for SAS URL generation)
AZURE_STORAGE_ACCOUNT_NAME=yourstorageaccount
AZURE_STORAGE_ACCOUNT_URL=https://yourstorageaccount.blob.core.windows.net/
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONTAINER_SAS_URL_VALIDITY=3600

# User Management
DIGIHUB_USER_MANAGEMENT_URL=https://your-user-management-api/

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Retrieval Settings (optional - have defaults)
SESSION_CONTEXT_WINDOW_SIZE=5
ENABLE_RELEVANCE_FILTERING=true
MIN_SIMILARITY_THRESHOLD=0.35
ENABLE_METADATA_FILTERING=true
OUT_OF_SCOPE_CONFIDENCE_THRESHOLD=0.4
